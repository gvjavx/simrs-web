<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="logCronAction" class="com.neurix.hris.transaksi.logcron.action.LogCronAction"
          />

    <bean id="logCronBo" class="com.neurix.hris.transaksi.logcron.bo.impl.LogCronBoImpl"
          p:logCronDao-ref="logCronDao"
          />

    <bean id="logCronBoProxy" class="org.springframework.aop.framework.ProxyFactoryBean"
          p:target-ref="logCronBo">
        <property name="interceptorNames">
            <list>
                <value>transactionUserInterceptor</value>
                <value>hibernateInterceptor</value>
            </list>
        </property>
    </bean>

    <bean id="transactionUserInterceptor"
          class="org.springframework.transaction.interceptor.TransactionInterceptor"
          p:transactionManager-ref="transactionManager">
        <property name="transactionAttributes">
            <props>
                <prop key="getByCriteria">readOnly</prop>
            </props>
        </property>
    </bean>

    <bean id="logCronDao" class="com.neurix.hris.transaksi.logcron.dao.LogCronDao"
          p:sessionFactory-ref="sessionFactory" />

</beans>