<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="payrollSkalaGajiDplkPegawaiAction" class="com.neurix.hris.master.payrollSkalaGajiDplkPegawai.action.PayrollSkalaGajiDplkPegawaiAction"
          p:payrollSkalaGajiDplkPegawaiBoProxy-ref="payrollSkalaGajiDplkPegawaiBoProxy" />

    <bean id="payrollSkalaGajiDplkPegawaiBo" class="com.neurix.hris.master.payrollSkalaGajiDplkPegawai.bo.impl.PayrollSkalaGajiDplkPegawaiBoImpl"
          p:payrollSkalaGajiDplkPegawaiDao-ref="payrollSkalaGajiDplkPegawaiDao"
          p:golonganDapenDao-ref="golonganDapenDao"
    />

    <bean id="payrollSkalaGajiDplkPegawaiBoProxy" class="org.springframework.aop.framework.ProxyFactoryBean"
          p:target-ref="payrollSkalaGajiDplkPegawaiBo">
        <property name="interceptorNames">
            <list>
                <value>transactionUserInterceptor</value>
                <value>hibernateInterceptor</value>
            </list>
        </property>
    </bean>

    <bean id="transactionUserInterceptor"
          class="org.springframework.transaction.interceptor.TransactionInterceptor"
          p:transactionManager-ref="transactionManager">
        <property name="transactionAttributes">
            <props>
                <prop key="getByCriteria">readOnly</prop>
            </props>
        </property>
    </bean>

    <bean id="payrollSkalaGajiDplkPegawaiDao" class="com.neurix.hris.master.payrollSkalaGajiDplkPegawai.dao.PayrollSkalaGajiDplkPegawaiDao"
          p:sessionFactory-ref="sessionFactory" />

</beans>