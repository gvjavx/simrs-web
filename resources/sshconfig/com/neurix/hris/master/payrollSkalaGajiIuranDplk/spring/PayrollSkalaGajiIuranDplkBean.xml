<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="payrollSkalaGajiIuranDplkAction" class="com.neurix.hris.master.payrollSkalaGajiIuranDplk.action.PayrollSkalaGajiIuranDplkAction"
          p:payrollSkalaGajiIuranDplkBoProxy-ref="payrollSkalaGajiIuranDplkBoProxy" />

    <bean id="payrollSkalaGajiIuranDplkBo" class="com.neurix.hris.master.payrollSkalaGajiIuranDplk.bo.impl.PayrollSkalaGajiIuranDplkBoImpl"
          p:payrollSkalaGajiIuranDplkDao-ref="payrollSkalaGajiIuranDplkDao"
          p:golonganDapenDao-ref="golonganDapenDao"
    />

    <bean id="payrollSkalaGajiIuranDplkBoProxy" class="org.springframework.aop.framework.ProxyFactoryBean"
          p:target-ref="payrollSkalaGajiIuranDplkBo">
        <property name="interceptorNames">
            <list>
                <value>transactionUserInterceptor</value>
                <value>hibernateInterceptor</value>
            </list>
        </property>
    </bean>

    <bean id="transactionUserInterceptor"
          class="org.springframework.transaction.interceptor.TransactionInterceptor"
          p:transactionManager-ref="transactionManager">
        <property name="transactionAttributes">
            <props>
                <prop key="getByCriteria">readOnly</prop>
            </props>
        </property>
    </bean>

    <bean id="payrollSkalaGajiIuranDplkDao" class="com.neurix.hris.master.payrollSkalaGajiIuranDplk.dao.PayrollSkalaGajiIuranDplkDao"
          p:sessionFactory-ref="sessionFactory" />

</beans>