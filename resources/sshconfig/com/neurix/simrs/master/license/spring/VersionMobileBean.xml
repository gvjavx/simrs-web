<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="versionMobileController" class="com.neurix.simrs.mobileapi.VersionMobileController"
          p:versionMobileBoProxy-ref="versionMobileBoProxy"
    />

    <bean id="versionMobileBo" class="com.neurix.simrs.master.license.bo.impl.VersionMobileBoImpl"
          p:versionMobileDao-ref="versionMobileDao"
    />

    <bean id="versionMobileBoProxy" class="org.springframework.aop.framework.ProxyFactoryBean"
          p:target-ref="versionMobileBo">
        <property name="interceptorNames">
            <list>
                <value>transactionPasienInterceptor</value>
                <value>hibernateInterceptor</value>
            </list>
        </property>
    </bean>

    <bean id="transactionPasienInterceptor"
          class="org.springframework.transaction.interceptor.TransactionInterceptor"
          p:transactionManager-ref="transactionManager">
        <property name="transactionAttributes">
            <props>
                <prop key="getByCriteria">readOnly</prop>
                <prop key="saveAdd">PROPAGATION_REQUIRED</prop>
                <prop key="saveEdit">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

    <bean id="versionMobileDao" class="com.neurix.simrs.master.license.dao.VersionMobileDao"
          p:sessionFactory-ref="sessionFactory" />
</beans>