<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--<bean id="checkupAction" class="com.neurix.simrs.transaksi.checkup.action.CheckupAction"-->
          <!--p:checkupBoProxy-ref="checkupBoProxy" />-->

    <bean id="tindakanMedisAction" class="com.neurix.simrs.master.tindakanmedis.action.TindakanMedisAction"
          p:tindakanMedisBoProxy-ref="tindakanMedisBoProxy"
    />


    <bean id="tindakanMedisBo" class="com.neurix.simrs.master.tindakanmedis.bo.impl.TindakanMedisBoImpl"
        p:tindakanMedisDao-ref="tindakanMedisDao"
        p:tindakanMedisDetailDao-ref="tindakanMedisDetailDao"
    />

<!--    <bean id="rawatInapController" class="com.neurix.simrs.mobileapi.RawatInapController"-->
<!--          p:tindakanBoProxy-ref="tindakanBoProxy"-->
<!--    />-->

    <bean id="tindakanMedisBoProxy" class="org.springframework.aop.framework.ProxyFactoryBean"
          p:target-ref="tindakanMedisBo">
        <property name="interceptorNames">
            <list>
                <value>transactionTindakanMedisInterceptor</value>
                <value>hibernateInterceptor</value>
            </list>
        </property>
    </bean>

    <bean id="transactionTindakanMedisInterceptor"
          class="org.springframework.transaction.interceptor.TransactionInterceptor"
          p:transactionManager-ref="transactionManager">
        <property name="transactionAttributes">
            <props>
                <prop key="getByCriteria">readOnly</prop>
                <!--<prop key="saveAdd">PROPAGATION_REQUIRED</prop>-->
            </props>
        </property>
    </bean>

    <bean id="tindakanMedisDao" class="com.neurix.simrs.master.tindakanmedis.dao.TindakanMedisDao"
          p:sessionFactory-ref="sessionFactory" />

    <bean id="tindakanMedisDetailDao" class="com.neurix.simrs.master.tindakanmedis.dao.TindakanMedisDetailDao"
          p:sessionFactory-ref="sessionFactory" />



</beans>
