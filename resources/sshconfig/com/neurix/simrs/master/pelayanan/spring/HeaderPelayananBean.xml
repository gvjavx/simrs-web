<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="headerPelayananAction" class="com.neurix.simrs.master.pelayanan.action.HeaderPelayananAction"
          p:headerPelayananBoProxy-ref="headerPelayananBo"
    />

    <bean id="headerPelayananBo" class="com.neurix.simrs.master.pelayanan.bo.impl.HeaderPelayananBoImpl"
          p:headerPelayananDao-ref="headerPelayananDao"
          p:positionDao-ref="positionDao"
    />

    <bean id="headerPelayananBoProxy" class="org.springframework.aop.framework.ProxyFactoryBean"
          p:target-ref="headerPelayananBo">
        <property name="interceptorNames">
            <list>
                <value>transactionPelayananInterceptor</value>
                <value>hibernateInterceptor</value>
            </list>
        </property>
    </bean>

    <bean id="transactionPelayananInterceptor"
          class="org.springframework.transaction.interceptor.TransactionInterceptor"
          p:transactionManager-ref="transactionManager">
        <property name="transactionAttributes">
            <props>
                <prop key="getByCriteria">readOnly</prop>
                <prop key="saveAdd">PROPAGATION_REQUIRED</prop>
                <prop key="saveEdit">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

    <bean id="headerPelayananDao" class="com.neurix.simrs.master.pelayanan.dao.HeaderPelayananDao"
          p:sessionFactory-ref="sessionFactory" />

</beans>