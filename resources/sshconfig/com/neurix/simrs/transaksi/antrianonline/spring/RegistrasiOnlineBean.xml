<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">


    <bean id="registrasiOnlineBo" class="com.neurix.simrs.transaksi.antrianonline.bo.impl.RegistrasiOnlineBoImpl"
          p:registrasiOnlineDao-ref="registrasiOnlineDao"
          p:userDao-ref="userDao"
          p:pasienDao-ref="pasienDao"
    />

    <bean id="registrasiOnlineController" class="com.neurix.simrs.mobileapi.RegistrasiOnlineController"
          p:registrasiOnlineBoProxy-ref="registrasiOnlineBoProxy"
    />

    <bean id="registrasiOnlineBoProxy"
          class="org.springframework.aop.framework.ProxyFactoryBean"
          p:target-ref="registrasiOnlineBo">
        <property name="interceptorNames">
            <list>
                <value>transactionRegistrasiOnlineInterceptor</value>
                <value>hibernateInterceptor</value>
            </list>
        </property>
    </bean>

    <bean id="transactionRegistrasiOnlineInterceptor"
          class="org.springframework.transaction.interceptor.TransactionInterceptor"
          p:transactionManager-ref="transactionManager">
        <property name="transactionAttributes">
            <props>
                <prop key="getByCriteria">readOnly</prop>
                <prop key="saveAdd">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

    <bean id="userDao" class="com.neurix.authorization.user.dao.UserDao"
          p:sessionFactory-ref="sessionFactory"/>

    <bean id="registrasiOnlineDao" class="com.neurix.simrs.transaksi.antrianonline.dao.RegistrasiOnlineDao"
          p:sessionFactory-ref="sessionFactory" />

    <bean id="pasienDao" class="com.neurix.simrs.master.pasien.dao.PasienDao"
          p:sessionFactory-ref="sessionFactory" />

</beans>