<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="pendampingMakananAction" class="com.neurix.simrs.transaksi.makananpendamping.action.PendampingMakananAction"

    />

    <bean id="headerPendampingMakananBo" class="com.neurix.simrs.transaksi.makananpendamping.bo.impl.HeaderPendampingMakananBoImpl"
          p:headerPendampingMakananDao-ref="headerPendampingMakananDao"
          p:detailPendampingMakananDao-ref="detailPendampingMakananDao"
    />

    <bean id="headerPendampingMakananBoProxy" class="org.springframework.aop.framework.ProxyFactoryBean"
          p:target-ref="headerPendampingMakananBo">
        <property name="interceptorNames">
            <list>
                <value>transactionUserInterceptor</value>
                <value>hibernateInterceptor</value>
            </list>
        </property>
    </bean>

    <bean id="transactionUserInterceptor"
          class="org.springframework.transaction.interceptor.TransactionInterceptor"
          p:transactionManager-ref="transactionManager">
        <property name="transactionAttributes">
            <props>
                <prop key="getByCriteria">readOnly</prop>
                <prop key="saveAdd">PROPAGATION_REQUIRED</prop>
                <prop key="saveEdit">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

    <bean id="headerPendampingMakananDao" class="com.neurix.simrs.transaksi.makananpendamping.dao.HeaderPendampingMakananDao"
          p:sessionFactory-ref="sessionFactory" />
</beans>