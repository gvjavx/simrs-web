<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="keseimbanganIcuBo" class="com.neurix.simrs.transaksi.asesmenicu.bo.impl.KeseimbanganIcuBoImpl"
          p:keseimbanganIcuDao-ref="keseimbanganIcuDao"
    />

    <bean id="keseimbanganIcuBoProxy" class="org.springframework.aop.framework.ProxyFactoryBean"
          p:target-ref="keseimbanganIcuBo">
        <property name="interceptorNames">
            <list>
                <value>transactionDiagnosaRawatInterceptor</value>
                <value>hibernateInterceptor</value>
            </list>
        </property>
    </bean>

    <bean id="transactionInterceptor"
          class="org.springframework.transaction.interceptor.TransactionInterceptor"
          p:transactionManager-ref="transactionManager">
        <property name="transactionAttributes">
            <props>
                <prop key="getByCriteria">readOnly</prop>
                <prop key="saveAdd">PROPAGATION_REQUIRED</prop>
                <prop key="saveEdit">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

    <bean id="keseimbanganIcuDao" class="com.neurix.simrs.transaksi.asesmenicu.dao.KeseimbanganIcuDao"
          p:sessionFactory-ref="sessionFactory" />

</beans>