<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="asesmenAsuhanGiziBo" class="com.neurix.simrs.transaksi.asesmengizi.bo.impl.AsesmenAsuhanGiziBoImpl"
      p:asesmenAsuhanGiziDao-ref="asesmenAsuhanGiziDao"
    />

    <bean id="asesmenAsuhanGiziBoProxy" class="org.springframework.aop.framework.ProxyFactoryBean"
          p:target-ref="asesmenAsuhanGiziBo">
        <property name="interceptorNames">
            <list>
                <value>transactionDiagnosaRawatInterceptor</value>
                <value>hibernateInterceptor</value>
            </list>
        </property>
    </bean>

    <bean id="transactionDiagnosaRawatInterceptor"
          class="org.springframework.transaction.interceptor.TransactionInterceptor"
          p:transactionManager-ref="transactionManager">
        <property name="transactionAttributes">
            <props>
                <prop key="getByCriteria">readOnly</prop>
                <prop key="saveAdd">PROPAGATION_REQUIRED</prop>
                <prop key="saveEdit">PROPAGATION_REQUIRED</prop>
                <prop key="saveDelete">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

    <bean id="asesmenAsuhanGiziDao" class="com.neurix.simrs.transaksi.asesmengizi.dao.AsesmenAsuhanGiziDao"
          p:sessionFactory-ref="sessionFactory" />

</beans>