<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    
    <bean id="akunMataUangAction" class="com.neurix.akuntansi.master.akunMataUang.action.AkunMataUangAction"
          p:akunMataUangBoProxy-ref="akunMataUangBoProxy" />

    <bean id="akunMataUangBo" class="com.neurix.akuntansi.master.akunMataUang.bo.impl.AkunMataUangBoImpl"
          p:akunMataUangDao-ref="akunMataUangDao"
    />

    <bean id="akunMataUangBoProxy" class="org.springframework.aop.framework.ProxyFactoryBean"
          p:target-ref="akunMataUangBo">
        <property name="interceptorNames">
            <list>
                <value>transactionUserInterceptor</value>
                <value>hibernateInterceptor</value>
            </list>
        </property>
    </bean>

    <bean id="transactionUserInterceptor"
          class="org.springframework.transaction.interceptor.TransactionInterceptor"
          p:transactionManager-ref="transactionManager">
        <property name="transactionAttributes">
            <props>
                <prop key="getByCriteria">readOnly</prop>
            </props>
        </property>
    </bean>

    <bean id="akunMataUangDao" class="com.neurix.akuntansi.master.akunMataUang.dao.AkunMataUangDao"
          p:sessionFactory-ref="sessionFactory" />

</beans>