<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="jenisBudgetingBo" class="com.neurix.akuntansi.master.parameterbudgeting.bo.impl.JenisBudgetingBoImpl"
    p:jenisBudgetingDao-ref="jenisBudgetingDao"/>

    <bean id="jenisBudgetingBoProxy" class="org.springframework.aop.framework.ProxyFactoryBean"
          p:target-ref="jenisBudgetingBo">
        <property name="interceptorNames">
            <list>
                <value>masterParameterBudgetingInterceptor</value>
                <value>hibernateInterceptor</value>
            </list>
        </property>
    </bean>

    <bean id="masterParameterBudgetingInterceptor"
          class="org.springframework.transaction.interceptor.TransactionInterceptor"
          p:transactionManager-ref="transactionManager">
        <property name="transactionAttributes">
            <props>
                <prop key="getSearchByCriteria">readOnly</prop>
                <prop key="saveAdd">PROPAGATION_REQUIRED</prop>
                <prop key="saveEdit">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>
</beans>