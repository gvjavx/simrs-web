<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="laporanAkuntansiAction" class="com.neurix.akuntansi.transaksi.pendaftaranjasarekanan.action.PendaftaranJasaRekananAction"
    />

    <bean id="pendaftaranJasaRekananBo" class="com.neurix.akuntansi.transaksi.pendaftaranjasarekanan.bo.impl.PendaftaranJasaRekananBoImpl"
    />

    <bean id="pendaftaranJasaRekananBoProxy" class="org.springframework.aop.framework.ProxyFactoryBean"
          p:target-ref="pendaftaranJasaRekananBo">
        <property name="interceptorNames">
            <list>
                <value>pendaftaranJasaRekananInterceptor</value>
                <value>hibernateInterceptor</value>
            </list>
        </property>
    </bean>

    <bean id="pendaftaranJasaRekananInterceptor"
          class="org.springframework.transaction.interceptor.TransactionInterceptor"
          p:transactionManager-ref="transactionManager">
        <property name="transactionAttributes">
            <props>
                <prop key="getByCriteria">readOnly</prop>
                <prop key="saveAdd">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

    <bean id="laporanAkuntansiDao" class="com.neurix.akuntansi.transaksi.pendaftaranjasarekanan.dao.PendaftaranJasaRekananDao"
          p:sessionFactory-ref="sessionFactory" />

</beans>