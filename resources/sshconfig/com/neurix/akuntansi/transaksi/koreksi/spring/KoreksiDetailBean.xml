<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="koreksiDetailBo" class="com.neurix.akuntansi.transaksi.koreksi.bo.impl.KoreksiDetailBoImpl"
          p:koreksiDetailDao-ref="koreksiDetailDao"
    />

    <bean id="koreksiDetailBoProxy" class="org.springframework.aop.framework.ProxyFactoryBean"
          p:target-ref="koreksiDetailBo">
        <property name="interceptorNames">
            <list>
                <value>transactionKoreksiDetailInterceptor</value>
                <value>hibernateInterceptor</value>
            </list>
        </property>
    </bean>

    <bean id="transactionKoreksiDetailInterceptor"
          class="org.springframework.transaction.interceptor.TransactionInterceptor"
          p:transactionManager-ref="transactionManager">
        <property name="transactionAttributes">
            <props>
                <prop key="getByCriteria">readOnly</prop>
                <!--<prop key="searchPengajuanBiaya">PROPAGATION_REQUIRED</prop>-->
            </props>
        </property>
    </bean>

    <bean id="koreksiDetailDao" class="com.neurix.akuntansi.transaksi.koreksi.dao.KoreksiDetailDao"
          p:sessionFactory-ref="sessionFactory" />

</beans>