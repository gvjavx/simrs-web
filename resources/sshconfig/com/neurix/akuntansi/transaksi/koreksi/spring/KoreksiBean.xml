<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="koreksiAction" class="com.neurix.akuntansi.transaksi.koreksi.action.KoreksiAction"
          p:koreksiBoProxy-ref="koreksiBoProxy"
          p:billingSystemBoProxy-ref="billingSystemBoProxy"
          p:mappingJurnalBoProxy-ref="mappingJurnalBoProxy"
          p:kodeRekeningBoProxy-ref="kodeRekeningBoProxy"
          p:koreksiDetailBoProxy-ref="koreksiDetailBoProxy"
    />

    <bean id="koreksiBo" class="com.neurix.akuntansi.transaksi.koreksi.bo.impl.KoreksiBoImpl"
          p:koreksiDao-ref="koreksiDao"
          p:lampiranDao-ref="lampiranDao"
          p:branchDao-ref="branchDao"
          p:transDao-ref="transDao"
          p:positionDao-ref="positionDao"
          p:koreksiDetailDao-ref="koreksiDetailDao"
          p:userDao-ref="userDao"
          p:jurnalDao-ref="jurnalDao"
          p:kodeRekeningDao-ref="kodeRekeningDao"
          p:mappingJurnalDao-ref="mappingJurnalDao"


    />

    <bean id="koreksiBoProxy" class="org.springframework.aop.framework.ProxyFactoryBean"
          p:target-ref="koreksiBo">
        <property name="interceptorNames">
            <list>
                <value>transactionKoreksiInterceptor</value>
                <value>hibernateInterceptor</value>
            </list>
        </property>
    </bean>


    <bean id="transactionKoreksiInterceptor"
          class="org.springframework.transaction.interceptor.TransactionInterceptor"
          p:transactionManager-ref="transactionManager">
        <property name="transactionAttributes">
            <props>
                <prop key="getByCriteria">readOnly</prop>
                <prop key="getKoreksiPenyesuaianDetail">readOnly</prop>
                <prop key="getNamaRekeningKasJurnal">readOnly</prop>
                <prop key="getLampiranList">readOnly</prop>
                <prop key="saveAddKoreksi">PROPAGATION_REQUIRED</prop>
                <prop key="saveEditKoreksi">PROPAGATION_REQUIRED</prop>
                <prop key="approveKoreksi">PROPAGATION_REQUIRED</prop>
                <prop key="postingJurnal">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

    <bean id="koreksiDao" class="com.neurix.akuntansi.transaksi.koreksi.dao.KoreksiDao"
          p:sessionFactory-ref="sessionFactory" />

    <bean id="lampiranDao" class="com.neurix.akuntansi.transaksi.kas.dao.LampiranDao"
          p:sessionFactory-ref="sessionFactory" />

    <bean id="koreksiDetailDao" class="com.neurix.akuntansi.transaksi.koreksi.dao.KoreksiDetailDao"
          p:sessionFactory-ref="sessionFactory" />

</beans>