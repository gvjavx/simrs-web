<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="sewaLahanAction" class="com.neurix.akuntansi.transaksi.sewaLahan.action.SewaLahanAction"
          p:sewaLahanBoProxy-ref="sewaLahanBoProxy" />

    <bean id="sewaLahanBo" class="com.neurix.akuntansi.transaksi.sewaLahan.bo.impl.SewaLahanBoImpl"
          p:sewaLahanDao-ref="sewaLahanDao"
          p:branchDao-ref="branchDao"
          p:pembayaranDao-ref="pembayaranDao"
          p:masterVendorDao-ref="masterVendorDao"
          p:kasDao-ref="kasDao"
          p:kasDetailDao-ref="kasDetailDao"
          p:mappingJurnalDao-ref="mappingJurnalDao"
    />

    <bean id="sewaLahanBoProxy" class="org.springframework.aop.framework.ProxyFactoryBean"
          p:target-ref="sewaLahanBo">
        <property name="interceptorNames">
            <list>
                <value>sewaLahanInterceptor</value>
                <value>hibernateInterceptor</value>
            </list>
        </property>
    </bean>

    <bean id="sewaLahanInterceptor"
          class="org.springframework.transaction.interceptor.TransactionInterceptor"
          p:transactionManager-ref="transactionManager">
        <property name="transactionAttributes">
            <props>
                <prop key="getByCriteria">readOnly</prop>
                <prop key="getPenyewaanLahanById">readOnly</prop>
                <prop key="saveAdd">PROPAGATION_REQUIRED</prop>
                <prop key="saveDelete">PROPAGATION_REQUIRED</prop>
                <prop key="saveEdit">PROPAGATION_REQUIRED</prop>
                <prop key="batalkanSewaLahan">PROPAGATION_REQUIRED</prop>
                <prop key="postingJurnal">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

    <bean id="sewaLahanDao" class="com.neurix.akuntansi.transaksi.sewaLahan.dao.SewaLahanDao"
          p:sessionFactory-ref="sessionFactory" />
    
</beans>