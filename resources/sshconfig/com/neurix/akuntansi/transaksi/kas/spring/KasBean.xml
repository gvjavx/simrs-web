<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="kasAction" class="com.neurix.akuntansi.transaksi.kas.action.KasAction"
          p:kasBoProxy-ref="kasBoProxy"
          p:billingSystemBoProxy-ref="billingSystemBoProxy"
          p:tipeJurnalBoProxy-ref="tipeJurnalBoProxy"
          p:akunMataUangBoProxy-ref="akunMataUangBoProxy"
          p:kasDetailBoProxy-ref="kasDetailBoProxy"

    />

    <bean id="kasBo" class="com.neurix.akuntansi.transaksi.kas.bo.impl.KasBoImpl"
          p:kasDao-ref="kasDao"
          p:kasDetailDao-ref="kasDetailDao"
          p:kodeRekeningDao-ref="kodeRekeningDao"
          p:jurnalDao-ref="jurnalDao"
          p:jurnalDetailDao-ref="jurnalDetailDao"
          p:transDao-ref="transDao"
          p:positionDao-ref="positionDao"
          p:branchDao-ref="branchDao"
          p:mappingJurnalDao-ref="mappingJurnalDao"
          p:lampiranDao-ref="lampiranDao"
          p:userDao-ref="userDao"
          p:akunMataUangDao-ref="akunMataUangDao"
          p:masterDao-ref="masterDao"

    />

    <bean id="kasBoProxy" class="org.springframework.aop.framework.ProxyFactoryBean"
          p:target-ref="kasBo">
        <property name="interceptorNames">
            <list>
                <value>transactionUserInterceptor</value>
                <value>hibernateInterceptor</value>
            </list>
        </property>
    </bean>



    <bean id="transactionUserInterceptor"
          class="org.springframework.transaction.interceptor.TransactionInterceptor"
          p:transactionManager-ref="transactionManager">
        <property name="transactionAttributes">
            <props>
                <prop key="getByCriteria">readOnly</prop>
                <prop key="getSearchNotaKas">readOnly</prop>
                <prop key="getKasDetail">readOnly</prop>
                <prop key="getLampiranList">readOnly</prop>
                <prop key="getKodeRekeningKasJurnal">readOnly</prop>
                <prop key="getTipeMaster">readOnly</prop>
                <prop key="getDisableTrans">readOnly</prop>
                <prop key="getPosisiCoaDiMappingJurnal">readOnly</prop>
                <prop key="getNamaRekeningKasJurnal">readOnly</prop>

                <prop key="saveDelete">PROPAGATION_REQUIRED</prop>
                <prop key="saveEdit">PROPAGATION_REQUIRED</prop>
                <prop key="postingJurnal">PROPAGATION_REQUIRED</prop>
                <prop key="addPrintCount">PROPAGATION_REQUIRED</prop>
                <prop key="saveAddKas">PROPAGATION_REQUIRED</prop>
                <prop key="saveEditKas">PROPAGATION_REQUIRED</prop>
                <prop key="approveKas">PROPAGATION_REQUIRED</prop>
                <prop key="searchPengajuanBiaya">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

    <bean id="kasDao" class="com.neurix.akuntansi.transaksi.kas.dao.KasDao"
          p:sessionFactory-ref="sessionFactory" />

    <bean id="lampiranDao" class="com.neurix.akuntansi.transaksi.kas.dao.LampiranDao"
          p:sessionFactory-ref="sessionFactory" />

</beans>