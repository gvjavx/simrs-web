<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="kasDetailBo" class="com.neurix.akuntansi.transaksi.kas.bo.impl.KasDetailBoImpl"
          p:kasDetailDao-ref="kasDetailDao"
    />

    <bean id="kasDetailBoProxy" class="org.springframework.aop.framework.ProxyFactoryBean"
          p:target-ref="kasDetailBo">
        <property name="interceptorNames">
            <list>
                <value>kasDetailInterceptor</value>
                <value>hibernateInterceptor</value>
            </list>
        </property>
    </bean>

    <bean id="kasDetailInterceptor"
          class="org.springframework.transaction.interceptor.TransactionInterceptor"
          p:transactionManager-ref="transactionManager">
        <property name="transactionAttributes">
            <props>
                <prop key="getByCriteria">readOnly</prop>
                <prop key="getListKasDetail">readOnly</prop>
                <prop key="getById">readOnly</prop>
                <!--<prop key="saveDelete">PROPAGATION_REQUIRED</prop>-->
            </props>
        </property>
    </bean>

    <bean id="kasDetailDao" class="com.neurix.akuntansi.transaksi.kas.dao.KasDetailDao"
          p:sessionFactory-ref="sessionFactory" />

</beans>